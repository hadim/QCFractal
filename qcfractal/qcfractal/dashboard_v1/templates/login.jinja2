{%  extends "base.jinja2" %}
{%  block title %}QCFractal Dashboard Login {% endblock %}

{% block content %}
    <div class="container">
        <h1>Compute Managers</h1>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Login</h4>

                <form hx-post="/auth/v1/browser_login" hx-target="this" hx-swap="outerHTML">
                  <div>
                    <label>username</label>
                    <input type="text" name="username" value="">
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="text" name="password" value="">
                  </div>
                  <button class="btn">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
