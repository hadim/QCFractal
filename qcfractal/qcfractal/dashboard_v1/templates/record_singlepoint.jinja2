{%  extends "base.jinja2" %}
{%  block title %}QCFractal Compute Workers{% endblock %}

{% block content %}
    <div class="container">
        <h1>Singlepoint Record {{ id }} <span class="badge status-badge-{{ status.value }}">{{ status.value }}</span></h1>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Specification</h4>

                <dl class="row">
                <dt class="col-sm-2">Program</dt>
                <dd class="col-sm-10">{{ specification['program'] }}</dd>

                <dt class="col-sm-2">Driver</dt>
                <dd class="col-sm-10">{{ specification['driver'].value }}</dd>

                <dt class="col-sm-2">Method</dt>
                <dd class="col-sm-10">{{ specification['method'] }}</dd>

                <dt class="col-sm-2">Basis</dt>
                <dd class="col-sm-10">{{ specification['basis'] }}</dd>

                <dt class="col-sm-2">Keywords</dt>
                <dd class="col-sm-10">{{ specification['keywords'] }}</dd>

                <dt class="col-sm-2">Protocols</dt>
                <dd class="col-sm-10">{{ specification['protocols'] }}</dd>

                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Output</h4>
                <div id="record_output">
                <button class="btn btn-primary"
                        hx-get="/api/v1/records/singlepoint/{{ id }}"
                        hx-target="#record_output"
                        >Get Output</button>
                </div>
            </div>

    </div>
{% endblock %}